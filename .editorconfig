root = true

[*]
end_of_line = LF
charset = utf-8
indent_size = 4
indent_style = space
max_line_length = 140

[*.py]
indent_size = 4

[{*.html,*js}]
indent_size = 2

[*.vim]
insert_final_newline = true
trim_trailing_whitespace = true

[*.yml]
indent_size = 2

[{Makefile,**.mk,*.go}]
indent_style = tab
